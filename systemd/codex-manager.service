[Unit]
Description=Codex Manager (Telegram + Proxy Registry)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/root/telegram-bot
EnvironmentFile=/etc/codex-manager.env
ExecStart=/root/telegram-bot/scripts/run.sh
Restart=on-failure
RestartSec=3

NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target

